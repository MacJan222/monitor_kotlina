    <TextView
        android:id="@+id/pathToFile"
        android:layout_width="253dp"
        android:layout_height="83dp"
        android:text="Sciezka"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
