<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.github.mikephil.charting.charts.CombinedChart
        android:id="@+id/sensorPlot"
        android:layout_width="412dp"
        android:layout_height="510dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/minMaxTextView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="minMaxValuesHere"
        app:layout_constraintEnd_toStartOf="@+id/randomDataTextView"
        app:layout_constraintTop_toBottomOf="@+id/sensorPlot" />

    <Button
        android:id="@+id/btnStart"
        android:layout_width="200dp"
        android:layout_height="85dp"
        android:text="Start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/minMaxTextView" />

    <Button
        android:id="@+id/btnEnd"
        android:layout_width="200dp"
        android:layout_height="85dp"
        android:text="ZakoÅ„cz"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/minMaxTextView" />

    <TextView
        android:id="@+id/randomDataTextView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="randomDataHere"
        app:layout_constraintStart_toEndOf="@+id/minMaxTextView"
        app:layout_constraintTop_toBottomOf="@+id/sensorPlot"
        tools:layout_editor_absoluteX="304dp" />
</androidx.constraintlayout.widget.ConstraintLayout>